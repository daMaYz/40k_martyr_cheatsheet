{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@app/*": [
				"app/*"
			],
			"@assets/*": [
				"assets/*"
			]
		},
		"resolveJsonModule": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "esnext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"downlevelIteration": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"es2018",
			"dom"
		]
	}
}
